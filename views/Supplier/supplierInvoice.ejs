										<div class="col-lg-12 mb-3">
											<label class="form-label">Supplier<span class="text-danger ms-1">*</span></label>
											
											<select name="supplier" class="select" id="edit-supplier">
											<% suppliers.forEach(supplier => { %>
												<option value="<%= supplier._id %>"><%= supplier.supplier %></option>
											<% }) %>
											</select>                                           
										</div>	
										<div class="col-lg-12 mb-3">
											<label class="form-label">Branch<span class="text-danger ms-1">*</span></label><br>
											<%= ownerBranch && ownerBranch.branch && ownerBranch.branch.branch_name 
