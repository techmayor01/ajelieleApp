								<table class="table datatable">
									<thead class="thead-light">
										<tr>
											<th>Supplier</th>
											<th>Invoice Type</th>
                                            <th>Amount</th>
                                            <th>Notes</th>
                                            <th>Date</th>
											<th class="no-sort"></th>
										</tr>
									</thead>
									<tbody>
										<% if (invoices.length > 0) { %>
                                        <% invoices.forEach((invoice) => { %>
											<tr>
												<td><%= invoice.supplier.supplier %></td>
												<td><%= invoice.invoice_type %></td>
												<td>â‚¦<%= invoice.amount %></td>
												<td><%= invoice.reason %></td>
												<td><%= new Date(invoice.payment_date).toISOString().slice(0, 10) %></td>
											 	<td class="action-table-data">
													<div class="edit-delete-action">
														<a href="#"
															class="me-2 p-2 mb-0 edit-invoice-btn"
															data-bs-toggle="modal"
															data-bs-target="#edit-income"
															data-id="<%= invoice._id %>"
															data-supplier="<%= invoice.supplier._id %>"
															data-type="<%= invoice.invoice_type %>"
															data-amount="<%= invoice.amount %>"
															data-date="<%= invoice.payment_date.toISOString().split('T')[0] %>"
															data-reason="<%= invoice.reason %>">
															<i data-feather="edit" class="feather-edit"></i>
														</a>

														<a href="javascript:void(0);"
														class="me-0 p-2 mb-0 delete-invoice-btn"
														data-bs-toggle="modal"
														data-bs-target="#delete-modal"
														data-id="<%= invoice._id %>">
