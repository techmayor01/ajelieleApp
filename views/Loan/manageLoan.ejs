													const contractEnd = new Date().toISOString().split('T')[0];
													document.getElementById('contractEnd').value = contractEnd;
												</script>										
											</div>				
											<div class="col-lg-12">
												<div class="mb-3">
													<label class="form-label">Contract Details<span class="text-danger ms-1">*</span></label>
