<script>
document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.edit-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const row = this.closest('tr');

      // Extract values
      const loanerName = row.dataset.loanerName;
      const loanAmount = row.dataset.loanAmount;
      const startDate = row.dataset.startDate;
      const endDate = row.dataset.endDate;
      const details = row.dataset.details;

      // Fill modal fields
      document.querySelector('#edit-money-transfer input#loanerSearch').value = loanerName; // âœ… show loaner name
      document.querySelector('#edit-money-transfer input[name="loanAmount"]').value = loanAmount;
      document.querySelector('#edit-money-transfer input[name="loanContractDate"]').value = startDate;
      document.querySelector('#edit-money-transfer input[name="loanContractEndDate"]').value = endDate;
      document.querySelector('#edit-money-transfer textarea[name="details"]').value = details;

      // Set loanId for updating
      document.querySelector('#edit-money-transfer form').action = `/updateLoan/${row.dataset.loanId}`;
    });
  });
});
</script>

<script>
document.addEventListener('DOMContentLoaded', function () {
  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      const row = this.closest('tr');
      const loanId = row.dataset.loanId;

      // Set loan ID in form or button
      const deleteBtn = document.querySelector('#delete-modal .btn-primary');
      deleteBtn.setAttribute('onclick', `confirmDelete('${loanId}')`);
    });
  });
});

// Send delete request
function confirmDelete(loanId) {
  fetch(`/deleteLoan/${loanId}`, {
    method: 'DELETE'
  })
  .then(res => {
    if (res.ok) location.reload();
    else alert("Failed to delete loan");
  });
}
</script>

		 

		 
