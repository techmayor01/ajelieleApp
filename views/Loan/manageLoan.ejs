													<input type="number" autocomplete="off" name="loanAmount" class="form-control">   
												</div>                                   
											</div>	
											<div class="col-lg-12">
												<div class="mb-3">
													<label class="form-label">Contract Start Date<span class="text-danger ms-1">*</span></label>
													<input type="date" id="payment_date" name="loanContractDate" class="form-control">
												</div>	
												<script>
													const contractStart = new Date().toISOString().split('T')[0];
													document.getElementById('payment_date').value = contractStart;
												</script>										
											</div>				
