<script>
	document.addEventListener("DOMContentLoaded", function () {
	const editButtons = document.querySelectorAll(".editLoanerBtn");

	editButtons.forEach(button => {
	button.addEventListener("click", function () {
	const loaner = this.getAttribute("data-loaner");
	const mobile = this.getAttribute("data-mobile");
	const address = this.getAttribute("data-address");
	const id = this.getAttribute("data-id");

	document.getElementById("edit-loaner").value = loaner;
	document.getElementById("edit-mobile").value = mobile;
	document.getElementById("edit-address").value = address;
	document.getElementById("edit-loaner-id").value = id;

	// If submitting the form, set form action here:
	document.getElementById("editLoanerForm").action = `/update/loaner/${id}`;
	});
	});
	});
</script>
		 
